@model CalculatorApp.Models.Calculator

<h2>Simple Calculator</h2>

<form asp-action="Index" method="post">
    <div>
        <label>Number 1:</label>
        <input asp-for="Number1" class="form-control" />
    </div>

    <div>
        <label>Number 2:</label>
        <input asp-for="Number2" class="form-control" />
    </div>

    <div>
        <label>Operation:</label>
        <select asp-for="Operation" class="form-control">
            <option value="+">Addition (+)</option>
            <option value="-">Subtraction (-)</option>
            <option value="*">Multiplication (*)</option>
            <option value="/">Division (/)</option>
        </select>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

<br />

@if (ViewBag.Error != null)
{
    <div style="color:red;">@ViewBag.Error</div>
}

@if (Model.Result != 0 || Model.Operation != null)
{
    <div style="margin-top:20px;">
        <h4>Result: @Model.Result</h4>
    </div>
}
